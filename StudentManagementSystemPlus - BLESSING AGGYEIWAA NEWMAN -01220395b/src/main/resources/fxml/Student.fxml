<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="469.0" prefWidth="900.0" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f6f8;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="controller.StudentController">

    <!-- Top Toolbar -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="tfSearch" prefWidth="200" promptText="Search by ID or Name" />
        <Button onAction="#handleSearch" text="Search" />
        <Button onAction="#handleRefresh" text="Refresh" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleSortGPA" prefWidth="100.0" text="Sort by GPA" />
    </HBox>

    <!-- Filter Row -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 0;">
        <Label text="Filter:" />
        <ComboBox fx:id="cbFilterProgramme" prefWidth="120" promptText="Programme" />
        <ComboBox fx:id="cbFilterLevel" prefWidth="80" promptText="Level" />
        <ComboBox fx:id="cbFilterStatus" prefWidth="100" promptText="Status" />
        <Button onAction="#handleFilter" text="Apply Filter" />
    </HBox>

    <HBox spacing="20">
        <!-- Table -->
        <!-- Increased TableView width slightly to accommodate email -->
        <TableView fx:id="studentTable" prefHeight="376.0" prefWidth="620.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="70" text="ID" />
                <TableColumn fx:id="colName" prefWidth="120" text="Name" />
                <TableColumn fx:id="colProgramme" prefWidth="70" text="Prog" />
                <!-- NEW EMAIL COLUMN -->
                <TableColumn fx:id="colEmail" prefWidth="140" text="Email" />
                <TableColumn fx:id="colLevel" prefWidth="40" text="Lvl" />
                <TableColumn fx:id="colGpa" prefWidth="40" text="GPA" />
                <TableColumn fx:id="colStatus" prefWidth="70" text="Status" />
            </columns>
        </TableView>

        <!-- Form -->
        <VBox spacing="8" style="-fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-color: white; -fx-background-radius: 5;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Student Form" />
            <TextField fx:id="tfId" promptText="ID*" />
            <TextField fx:id="tfName" promptText="Full Name*" />
            <TextField fx:id="tfProgramme" promptText="Programme*" />
            <ComboBox fx:id="cbLevel" prefWidth="150" promptText="Level*" />
            <TextField fx:id="tfGpa" promptText="GPA (0-4)*" />
            <TextField fx:id="tfEmail" promptText="Email" />
            <TextField fx:id="tfPhone" promptText="Phone" />
            <ComboBox fx:id="cbStatus" prefWidth="150" promptText="Status*" />

            <HBox alignment="CENTER" spacing="5">
                <Button onAction="#handleAdd" prefWidth="70" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Add" />
                <Button onAction="#handleUpdate" prefWidth="70" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Update" />
                <Button onAction="#handleDelete" prefWidth="70" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" />
            </HBox>
            <Label fx:id="lblMessage" style="-fx-font-size: 11px; -fx-text-fill: red;" wrapText="true" />
        </VBox>
    </HBox>
</VBox>