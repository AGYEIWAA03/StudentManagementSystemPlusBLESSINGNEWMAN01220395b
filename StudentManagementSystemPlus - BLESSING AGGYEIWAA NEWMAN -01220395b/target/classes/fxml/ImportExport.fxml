<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Added -fx-background-color: #f4f6f8; to VBox -->
<VBox spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ImportExportController"
      style="-fx-padding: 20; -fx-background-color: #f4f6f8;">

    <Label text="Data Management" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Import Section Card -->
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-color: white; -fx-background-radius: 5;">
        <Label text="Import Data" style="-fx-font-weight: bold;"/>
        <Button text="Import from CSV" onAction="#handleImport" style="-fx-font-size: 14px; -fx-padding: 10 20; -fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Label fx:id="lblImportStatus" style="-fx-text-fill: #333;"/>
    </VBox>

    <!-- Export Section Card -->
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-color: white; -fx-background-radius: 5;">
        <Label text="Export Data" style="-fx-font-weight: bold;"/>
        <Button text="Export All Students" onAction="#handleExportAll" style="-fx-font-size: 14px; -fx-padding: 10 20; -fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Label fx:id="lblExportStatus" style="-fx-text-fill: #333;"/>
    </VBox>
</VBox>