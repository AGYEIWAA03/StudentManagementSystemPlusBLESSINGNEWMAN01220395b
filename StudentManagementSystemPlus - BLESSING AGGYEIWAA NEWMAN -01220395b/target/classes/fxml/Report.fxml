<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Added -fx-background-color: #f4f6f8; to VBox -->

<VBox prefHeight="633.0" prefWidth="570.0" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f6f8;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="controller.ReportController">

    <!-- Top Control Bar with Color -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5;">
        <Label style="-fx-font-weight: bold;" text="Report Type:" />
        <ComboBox fx:id="cbReportType" prefWidth="200" />
        <TextField fx:id="tfGpaThreshold" prefWidth="80" promptText="Threshold" />
        <Button onAction="#generateReport" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Generate" />
        <Button onAction="#exportReport" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Export" />
    </HBox>

    <Label fx:id="lblSummary" style="-fx-font-weight: bold; -fx-padding: 5 0;" />

    <!-- Table for Student Lists -->
    <TableView fx:id="tableReports" prefHeight="580.0" prefWidth="530.0" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colRId" prefWidth="100" text="ID" />
            <TableColumn fx:id="colRName" prefWidth="200" text="Name" />
            <TableColumn fx:id="colRGpa" prefWidth="80" text="GPA" />
        </columns>
    </TableView>

    <!-- Table for Summary Data -->
    <TableView fx:id="tableSummary" style="-fx-background-color: white;" visible="false" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colKey" prefWidth="200" text="Category" />
            <TableColumn fx:id="colValue" prefWidth="100" text="Value" />
        </columns>
    </TableView>
</VBox>
